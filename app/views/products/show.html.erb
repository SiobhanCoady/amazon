<h1><%= @product.title %> - $<%= sprintf('%.2f', @product.price) %></h1>
<p><%= @product.description %></p>

<%= link_to 'Edit', edit_product_path(@product) %>

<%= link_to 'Delete', product_path(@product),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %>
